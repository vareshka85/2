price = 0
discount = 10
tickets = input("Укажите количество билетов:")
for i in range(int(tickets)):
      age = input("Введите возраст покупателя:")
      if int(age) < 18:
          price += 0
      elif 18 <= int(age) < 25:
          price += 990
      elif int(age) >= 25:
          price += 1390
      else:
          print("Введите возраст от 0 до 100 лет. Например: 25")
if int(tickets) > 3:
      price = price-(price*discount/100)
print("Общая стоимость покупки:", price)
